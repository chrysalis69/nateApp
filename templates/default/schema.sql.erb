CREATE DATABASE <%= node['nateApp']['database']['dbname'] %>;
use <%= node['nateApp']['database']['dbname'] %>;

CREATE TABLE presenters
(
  id       integer auto_increment not null,
  name     varchar(255) not null,
  email    varchar(255) not null,
  primary key (id)
);

